{
  "name": "event-listener-resize",
  "version": "0.0.2",
  "description": "A tiny library to add/remove listeners on Element resize",
  "main": "dist/index.js",
  "source": "src/index.js",
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "prestart": "prestart",
    "build": "zero build",
    "build:postclean": "rm -rf dist/__tests__ && rm -rf dist/__fixtures__",
    "bundle": "microbundle --output build",
    "dev": "zero test --watchAll",
    "git:push": "git push --follow-tags",
    "lint": "zero lint",
    "format": "zero format",
    "validate": "zero validate",
    "precommit": "zero precommit",
    "start": "npm run dev",
    "test": "zero test --coverage",
    "clean": "rm -rf dist lib build",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "release": "np --no-cleanup"
  },
  "author": "Jon Quach <hello@jonquach.com> (https://jonquach.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itsjonq/event-listener-resize.git"
  },
  "bugs": {
    "url": "https://github.com/itsjonq/event-listener-resize/issues"
  },
  "license": "MIT",
  "keywords": [
    "resize",
    "element",
    "eventlistener",
    "event",
    "addeventlistener",
    "removeeventlistener"
  ],
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@helpscout/prestart": "0.0.9",
    "@helpscout/zero": "0.0.10",
    "babel-core": "6.26.3",
    "microbundle": "0.8.3",
    "np": "3.0.4",
    "nyc": "13.1.0"
  }
}
